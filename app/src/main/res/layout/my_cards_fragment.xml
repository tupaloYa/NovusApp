<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/personalCardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:src="@drawable/pers_card"
            android:layout_width="192dp"
            android:layout_height="128dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:text="Персональная карта"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#f80808" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/availableCardsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:src="@drawable/av_cards"
            android:layout_width="192dp"
            android:layout_height="128dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:text="Доступные карты"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF80808"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>

</LinearLayout>